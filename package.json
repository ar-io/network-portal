  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "yarn clean && tsc --build tsconfig.build.json && NODE_OPTIONS=--max-old-space-size=32768 vite build",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=prod VITE_GITHUB_HASH=local vite",
